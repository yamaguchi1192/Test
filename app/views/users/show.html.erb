
 <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    
<div class="container">
	<div class="row">
		<div class="col-md-1">


			<h1>User info</h1>
			<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %> 
			<h2>name</h2>
			<%= @user.name %>
			<h2>introduction</h2>
			<%= @user.introduction %>
			<%= link_to"編集",edit_user_path %>


			<%= render "home/list", book: @book %>

		</div>

		<div class="col-md-11">
			<table border>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>

				</tr>



				<h1>Books</h1>
                <% @books.each do |book| %>

					<tr>
						<td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %> </td>
						<td><%=link_to "#{book.title}", book_path(book) %></td>
						<td><%= book.body %></td>
					</tr>
				
				<% end %>

		   </table>


		</div>
	</div>
</div>
















